@page
@model Adventure_Chest.Models.User
@{
    ViewData["Title"] = "Adventure_Chest";
}
<div class="text-center">
    <h1 class="display-4">Сундук приключений</h1>
</div>
<div class="container_main">
    <!--<h2 class="text-center">Приключения начинаются</h2>-->
    <main>
        <div id="modal-container"></div>
        <div class="grid">
            <div class="grid_item">
                <h2 class="grid_title">Увлекательный мир игры</h2>
                <p class="grid_description">
                    Врата подземелья открылись! Наберите
                    отряд верных сопартийцев, припрячте в рукавк козырей и решите
                    для себя: готовы ли вы рискнуть всем ради славы и богатства?
                </p>
            </div>
            <div class="grid_item">
                <a href="./PlayingField" class="grid_link play">Начать игру</a>
                <a href="./Rules" class="grid_link rules">Правила</a>
                <a href="#" class="grid_link play">Персонажи</a>
                <a href="#" class="grid_link play">ЧТО ТО</a>
            </div>
            <div class="grid_item">
                <a href="./Register" class="grid_link_peson">Регистация / </a>
                <a href="#" id="btnclick" class="grid_link_peson">Вход</a>
            </div>
        </div>
        <div id="login" class="modal">
            <!-- Модальное окно с id "login" -->
            <div class="modal-contents">
                <div class="modal-fade">
                    <button class="close" data-dismiss="modal" area-hidden="true">X</button>
                    <h4>Вход</h4>
                </div>
                <div class="modal-body">
                    <dl class="dl-horizontal">
                        @Html.ValidationSummary()
                        <div class="form-group">
                            <div class="col-md-2 control-label">Логин</div>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Login, new { @class = "form-control", placeholder = "Введите логин" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 control-label">Пароль</div>
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Введите логин" })
                            </div>
                        </div>
                    </dl>
                    <button>Войти</button>
                </div>
            </div>
        </div>

    </main>
</div>
<script>// JavaScript для открытия и закрытия модального окна
    document.getElementById('btnclick').addEventListener('click', function () {
        document.getElementById('login').style.display = 'block';
    });

    document.getElementsByClassName('close')[0].addEventListener('click', function () {
        document.getElementById('login').style.display = 'none';
    });</script>




